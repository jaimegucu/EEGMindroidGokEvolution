<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tatami"
    android:orientation="vertical" >
    
    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginBottom="5dp" >
		<LinearLayout
		    android:id="@+id/linearSuperiorGokEvolution"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:layout_marginBottom="5dp" >
		</LinearLayout>
		<LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginTop="5dp"
	            android:orientation="vertical" 
	            android:gravity="right">
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="10dp"
		            android:layout_marginTop="5dp"
		            android:gravity="right|center_horizontal"
		            android:orientation="horizontal" >
		            <ImageView
		                android:id="@+id/imagenCalidadConexion"
		                android:layout_width="18dp"
		                android:layout_height="18dp"
		                android:layout_gravity="left"
		                android:scaleType="fitXY"
		                android:src="@drawable/circle_red" />
		
		            <TextView
		                android:id="@+id/textoPorcentajeBateria"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:layout_marginLeft="6dp"
		                android:layout_marginRight="0.5dp"
		                android:text="@string/porcentaje_inicial_bateria"
		                android:textColor="@android:color/black" />
		
		            <ImageView
		                android:id="@+id/imagenPorcentajeBateria"
		                android:layout_width="20dp"
		                android:layout_height="16dp"
		                android:layout_marginTop="2dp"
		                android:scaleType="fitXY"
		                android:src="@drawable/bateria100_92" />
		        </LinearLayout>
	
		        <Button
		            android:id="@+id/btn_pausar"
		            android:layout_width="80dp"
		            android:layout_height="40dp"
		            android:layout_marginRight="10dp"
		            android:background="@drawable/boton_menu"
		            android:layout_marginTop="12dp"
		            android:text="@string/btn_parar"
		            android:textSize="16dp" />
	
		    </LinearLayout>        
    </LinearLayout>
	<LinearLayout
		    android:id="@+id/linearInferior"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:layout_weight="1"
		    android:gravity="center_horizontal|bottom">

		<com.app.eeg_mindroid_gokevolution.SurfaceViewGokEvolution
		    android:id="@+id/surfaceViewGokEvolution"
		    android:layout_width="108dp"
		    android:layout_height="180dp"
		    android:layout_marginBottom="10dp"
		    android:orientation="horizontal"/>

		<ImageView
		    android:id="@+id/imageView1"
		    android:layout_width="108dp"
		    android:layout_height="180dp"
		    android:layout_marginBottom="10dp"
		    android:src="@drawable/gokevolutionnormal_inicio1" />

	</LinearLayout>
</LinearLayout>
